<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-chromara" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Chromara</name>
    <description>A minimalist Cordova Camera Plugin inspired by Process Zero.</description>
    <license>MIT</license>
    <keywords>cordova, camera, plugin, minimalist</keywords>
    <engines>
        <engine name="cordova" version=">=10.0.0" />
    </engines>
    <platform name="android">
        <!-- Configure AndroidManifest permissions -->
        <config-file target="AndroidManifest.xml" parent="/*">
            <!-- Request necessary permissions -->
            <uses-permission android:name="android.permission.CAMERA" />
            <!-- Permissions for saving images -->
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
                android:maxSdkVersion="28" />
            <!-- For Android 10+, use scoped storage -->
        </config-file>

        <!-- Source file for the plugin's Java implementation -->
        <source-file src="src/android/Chromara.java" target-dir="src/com/kelter/chromara" />

        <!-- Include custom Gradle file -->
        <resource-file src="scripts/build.gradle" target="app/custom-build.gradle" />

        <!-- Apply the custom Gradle file in the main build.gradle -->
        <config-file target="app/build.gradle" parent="**">
            apply from: "app/custom-build.gradle"
        </config-file>
    </platform>

    <!-- JavaScript module for the plugin -->
    <js-module src="www/chromara.js" name="chromara">
        <clobbers target="cordova.plugins.Chromara" />
    </js-module>
</plugin>
